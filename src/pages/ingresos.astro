---
import Layout from "../layouts/Layout.astro";
import InsideHeader from "../components/InsideHeader.astro"
---

<Layout>
    <InsideHeader />
  <div class="max-w-4xl mx-auto p-6 border rounded-lg shadow mt-10 bg-white">
    <h2 class="text-2xl font-bold text-center mb-6">Pagos realizados</h2>

    <div class="flex flex-col gap-4 mb-6">
      <input
        type="text"
        placeholder="Nombre completo"
        class="border rounded px-4 py-2 w-full"
      />

      <input
        type="number"
        placeholder="Numero de tarjeta"
        class="border rounded px-4 py-2 w-full"
      />

      <div class="flex flex-col md:flex-row gap-4">
        <input type="text" placeholder="Fecha de vencimiento" class="border rounded px-4 py-2 w-full md:w-1/3" />
        <input type="text" placeholder="CVV" class="border rounded px-4 py-2 w-full md:w-1/3" />
        <input type="text" placeholder="Monto" class="border rounded px-4 py-2 w-full md:w-1/3" />
      </div>

      <button class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600 transition w-fit self-center">
        Realizar pago
      </button>
    </div>

    <h3 class="text-lg font-semibold text-center mb-4">PAGOS</h3>

    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-300 text-sm text-left">
        <thead class="bg-gray-100">
          <tr>
            <th class="border px-4 py-2">ID</th>
            <th class="border px-4 py-2">NOMBRE</th>
            <th class="border px-4 py-2">APELLIDOS</th>
            <th class="border px-4 py-2">NUMERO DE TARJETA</th>
            <th class="border px-4 py-2">MONTO</th>
          </tr>
        </thead>
        <tbody>
            <tr class="text-center">
              <td class="border px-4 py-2">#N</td>
              <td class="border px-4 py-2">Fernando Alejandro</td>
              <td class="border px-4 py-2">Vazquez Medina</td>
              <td class="border px-4 py-2">1111-1111-1111-1111</td>
              <td class="border px-4 py-2">999</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</Layout>
